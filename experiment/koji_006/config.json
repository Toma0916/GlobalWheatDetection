{
    "debug": false,
    "general": {
        "output_dirname": "koji/exp_006_balancesampling",
        "seed": 42,
        "model_save_interval": 10,
        "bbox_filter": {
            "max_bbox_size": 160000,
            "min_bbox_size": 90
        }
    },
    "model": {
        "name": "faster_rcnn", 
        "config": {
            "backbone": "fasterrcnn_resnet50_fpn",
            "class_num": 2,
            "pretrained": true
        }
    },
    "train": {
        "batch_size": 8,
        "epochs": 51,
        "optimizer": {
            "name": "adam",
            "config": {
                "lr": 0.0001,
                "betas": {
                    "tuple": {
                        "b1": 0.5,
                        "b2": 0.999
                    }
                },
                "eps": 1e-8
            }
        },
        "scheduler": {
            "name": "WarmupCosineAnnealing",
            "config": {
                "T_max": 30,
                "warmup_iters": 8,
                "eta_min": 1e-6
            }
        },
        "augment": {
            "test_time_augment": false
        },
        "sampler": {
            "balance_sources": {
                "strength": 10000
            }
        }
    }
}