{
    "debug": false,
    "general": {
        "output_dirname": "harvest/koji/exp_002",
        "experiment_name": "harvest",
        "seed": 42,
        "model_save_interval": 5,
        "valid_image_save_interval": 2,
        "bbox_filter": {
            "max_bbox_size": 100000,
            "min_bbox_size": 100
        },
        "train_valid_split": {
            "name": "source",
            "config": {
                "valid_sources": [
                    "arvalis_2"
                ]
            }
        }
    },
    "model": {
        "name": "faster_rcnn", 
        "config": {
            "backbone": "resnet50_coco",
            "class_num": 2,
            "pretrained": true
        }
    },
    "train": {
        "batch_size": 8,
        "epochs": 100,
        "optimizer": {
            "name": "adam",
            "config": {
                "lr": 0.0001,
                "betas": {
                    "tuple": {
                        "b1": 0.5,
                        "b2": 0.999
                    }
                },
                "eps": 1e-8
            }
        },
        "scheduler": {
            "name": "ReduceLROnPlateau",
            "config": {
                "mode": "min",
                "factor": 0.5,
                "patience": 1,
                "verbose": false,
                "threshold": 0.0001,
                "threshold_mode": "abs",
                "cooldown": 0,
                "min_lr": 1e-08,
                "eps": 1e-08
            }
        },
        "augment": {
            "horizontal_flip": {
                "p": 0.5
            },
            "vertical_flip": {
                "p": 0.5
            },
            "random_rotate_90": {
                "p": 0.5
            },
            "hsv": {
                "p": 0.5
            },
            "random_contrast": {
                "p": 0.5
            },
            "random_brightness": {
                "p": 0.5
            },
            "random_sized_bbox_safe_crop": {
                "height": 1024,
                "width": 1024,
                "p": 0.5
            },
            "mosaic": {
                "p": 0.5
            },
            "cutout": {
                "num_holes": 8,
                "max_h_size": 64,
                "max_w_size": 64,
                "fill_value": 0,
                "p": 0.5
            },
            "test_time_augment": false
        }
    },
    "valid": {
        "apply_bbox_filter": true,
        "confidence_filter": {
            "min_confidence": 0.2
        },
        "post_processor": {
            "name": "wbf",
            "config": {
                "threshold": 0.6
            }
        }
    }
}