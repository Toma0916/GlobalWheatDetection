{
    "debug": false,
    "general": {
        "output_dirname": "toma/exp_004_postprocess",
        "seed": 42,
        "model_save_interval": 10,
        "bbox_filter": {
            "max_bbox_size": 160000,
            "min_bbox_size": 3000
        }
    },
    "model": {
        "name": "faster_rcnn", 
        "config": {
            "backbone": "fasterrcnn_resnet50_fpn",
            "class_num": 2,
            "pretrained": true
        }
    },
    "train": {
        "batch_size": 8,
        "epochs": 51,
        "optimizer": {
            "name": "adam",
            "config": {
                "lr": 0.0005,
                "betas": {
                    "tuple": {
                        "b1": 0.5,
                        "b2": 0.999
                    }
                },
                "eps": 1e-8
            }
        },
        "scheduler": {
            "name": "Step",
            "config": {
                "step_size": 10,
                "gamma": 0.08,
                "last_epoch": -1
            }
        },
        "augment": {
            "mosaic": {
                "p": 0.5
            },
            "horizontal_flip": {
                "p": 0.5
            },
            "vertical_flip": {
                "p": 0.5
            },
            "random_sized_bbox_safe_crop": {
                "height": 1024,
                "width": 1024,
                "p": 0.5
            },
            "blur": {
                "p": 0.5
            },
            "motion_blur": {
                "p": 0.5
            },
            "random_brightness": {
                "p": 0.5,
                "limit": 0.6
            },
            "random_contrast": {
                "p": 0.5,
                "limit": {
                    "tuple": {
                        "1": 0.7,
                        "2": 0.9
                    }
                }
            },
            "test_time_augment": false
        }
    },
    "valid": {
        "apply_bbox_filter": true,
        "confidence_filter": {
            "min_confidence": 0.2
        },
        "non_maximum_supression": {
            "apply": true,
            "config": {
                "threshold": 0.5
            }
        }
    }
}