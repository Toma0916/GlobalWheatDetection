{
    "debug": false,
    "general": {
        "output_dirname": "koji/exp_008_hsv",
        "experiment_name": "koji",
        "seed": 42,
        "model_save_interval": 5,
        "valid_image_save_interval": 3,
        "bbox_filter": {
            "max_bbox_size": 160000,
            "min_bbox_size": 90
        }
    },
    "model": {
        "name": "faster_rcnn", 
        "config": {
            "backbone": "fasterrcnn_resnet50_fpn",
            "class_num": 2,
            "pretrained": true
        }
    },
    "train": {
        "batch_size": 8,
        "epochs": 100,
        "optimizer": {
            "name": "sgd",
            "config": {
                "lr": 0.005,
                "momentum": 0.9,
                "weight_decay": 0.0005
            }
        },
        "scheduler": {
            "name": "Step",
            "config": {
                "step_size": 10,
                "gamma": 0.5,
                "last_epoch": -1
            }
        },
        "augment": {
            "horizontal_frip": {
                "p": 0.5
            },
            "vertical_frip": {
                "p": 0.5
            },
            "random_rotate_90": {
                "p": 0.5
            },
            "hsv": {
                "p": 1.0
            },
            "test_time_augment": false
        }
    }
}