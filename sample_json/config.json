{
    "debug": true,
    "general": {
        "output_dirname": "sample",
        "seed": 42,
        "model_save_interval": 3,
        "bbox_filter": {
            "max_bbox_size": 160000,
            "min_bbox_size": 90
        },
        "train_valid_split": {
            "name": "source",
            "config": {
                "valid_sources": ["ethz_1", "inrae_1"]
            }
        }
    },
    "model": {
        "name": "faster_rcnn", 
        "config": {
            "backbone": "fasterrcnn_resnet50_fpn",
            "class_num": 2,
            "pretrained": true
        }
    },
    "train": {
        "batch_size": 8,
        "epochs": 10,
        "random_annotation": {
            "drop": {
                "p": 0.05
            },
            "vibration": {
                "max_ratio": 0.15
            }
        },
        "sampler": {
            "name": "balance_sources",
            "config": {
                "strength": 1000
            }
        },
        "optimizer": {
            "name": "adam",
            "config": {
                "lr": 0.0001,
                "betas": {
                    "tuple": {
                        "b1": 0.5,
                        "b2": 0.999
                    }
                },
                "eps": 1e-8
            }
        },
        "scheduler": {
            "name": "Step",
            "config": {
                "step_size": 10,
                "gamma": 0.1,
                "last_epoch": -1
            }
        },
        "augment": {
            "test_time_augment": false
        }
    },
    "valid": {
        "apply_bbox_filter": true
    }
}